
<% include common/header.ejs %>


<% include common/koTemplates.ejs %>

<div id="body">
    <div class="wrapper js-home">
    <div id="poster" data-bind="html: widgetHtml">


    </div>
    <div id="identify-search-wrapper" data-bind="visible: !loading()">
        <div class="identify-left left">
            <ul class="identify-questions" data-bind="foreach: fields">
                <li class="clearfix" data-bind="css: {select: type_id == chTypes.picklist}">
                    <div class="help-wrapper">
                        <a class="help-icon left" href="javascript:"></a>
                        <a class="reset-icon left" href="javascript:" data-bind="click: revert"></a>
                        <div class="tool-tip left hide">
                            <span class="tooltip-left left"></span>
                            <div class="tooltip-middle left">
                                <div class="tooltip-head">
                                    <div class="tooltip-head-content left">
                                        <h2 class="left">Help</h2>
                                        <a href="javascript:" class="right tooltip-close"></a>
                                    </div>
                                    <div class="clear"></div>
                                    <p data-bind="html: help"></p>
                                    <!--<a href="javascript:">learn more...</a>-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ko if: type_id == chTypes.text || type_id == chTypes.textarea || type_id == chTypes.number -->
                        <div class="question text"><div class="left label" data-bind="text: name"></div>

                            <div class="right text-field required-field identify-questions">
                                <input type="text" class="text"  maxlength="200" data-bind="value: value, css: {'js-leading-zeros':type_id == chTypes.number }" />
                            </div>
                        </div>
                    <!-- /ko -->

                    <!-- ko if: type_id == chTypes.radio -->
                        <p class="question" data-bind="text: name"></p>
                        <div class="answer" data-bind="">
                            <!-- ko foreach: values -->
                            <label class="option">
                                <input class="left" type="radio" data-bind="value: valuetype_id, iCheck: $parent.selectedValues, attr: {name: 'group' + $parent.id}" >
                                <span data-bind="text: name"></span>
                            </label>
                            <!-- /ko -->
                        </div>
                    <!-- /ko -->
                    <!-- ko if: type_id == chTypes.checkbox -->
                        <p class="question" data-bind="text: name"></p>
                        <div class="answer" data-bind="">
                            <!-- ko foreach: values -->
                            <label class="option">
                                <input class="left" type="checkbox" data-bind="value: valuetype_id, iCheck: $parent.selectedValues" >
                                <span data-bind="text: name"></span>
                            </label>
                            <!-- /ko -->
                        </div>
                    <!-- /ko -->
                    <!-- ko if: type_id == chTypes.picklist -->

                        <div class="html_reset">
                            <div class="question left"><div class="left " data-bind="text: name"></div>
                            </div>
                            <div class="left select-field identify-questions jqtransformNew">
                                <select class="left"  data-bind="options: values,
                                             jqSelect: value,
                                             optionsText: 'name',
                                             optionsValue: 'valuetype_id',
                                             value: value,
                                             optionsCaption: 'Choose...'">

                                </select>
                            </div>
                        </div>
                    <!-- /ko -->
                </li>
            </ul>
        </div>
        <div class="identify-right right">
            <span class="left-arrow"></span>
            <h1>Identify the Solution Mechanisms
                <br>
                <span>at side of You</span>
                <br>that fit your needs.</h1>
            <a href="javascript:;" class="orange-big-btn align clear" data-bind="click: search">
                <span class="orange-big-left left"></span>
                                <span class="orange-big-middle left orange-shadow Identify">
                                    <span class="search-icon left"></span>Identify Solutions</span>
                <span class="orange-big-right left"></span>
            </a>
        </div>
        <div class="clear"></div>
    </div>
    </div>
</div>

